{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "lib": ["es6", "es2016", "dom"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "core-js",
      "hammerjs",
      "jasmine",
      "node",
      "source-map",
      "tapable",
      "uglify-js",
      "webpack"
    ]
  },
  "exclude": [
    "node",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}